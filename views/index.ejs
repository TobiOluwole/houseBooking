              <a href="/add-customer" class="btn btn-warning btn-lg" role="button"
                ><span class="fa fa-user-plus"></span>
                <br />Add Customer</a
              >
              <a href="/customer-search" class="btn btn-primary btn-lg" role="button"
                ><span class="fa fa-search"></span>
                <br />Customer Search</a
              >
            </div>
          </div>
          <a
            href="https://github.com/TobiOluwole/houseBooking"
            class="btn btn-success btn-lg btn-block"
            role="button"
            ><span class="fab fa-github"></span> GitHub</a
          >
