<style>
  .container {
    padding-top: 20px;
  }
  .panel-body .btn:not(.btn-block) {
    width: 120px;
    margin-bottom: 10px;
  }
</style>

<div class="container">
  <div class="row">
    <div class="col-md-6">
      <div class="panel panel-primary">
        <div class="panel-heading">
          <h3 class="panel-title">
            <span class="glyphicon glyphicon-bookmark"></span> Quick Shortcuts
          </h3>
        </div>
        <div class="panel-body">
          <div class="row">
            <div class="col-6">
              <a href="/add-bongalow" class="btn btn-danger btn-lg" role="button"
                ><i class="fa fa-plus"></i>
                <br />Add Bongalow</a
              >
              <a href="/all-bongalows" class="btn btn-success btn-lg" role="button"
